<h4> Add Items </h4>

<table width='700'>
<%= form_for :order_item, url: url_for(controller: 'orders', action:'add_item'), method: 'get', format: :js, remote: true do |f| %>

	<%= f.hidden_field :menu_id %>

  <tr>

    <td>
  <div class="field">
  	<%= f.label "Code" %>
    <%= f.text_field :code %>
  </div>
</td>
<td>

  <div class="field">
  	<%= f.label :name %>
    <%= f.autocomplete_field :name, autocomplete_menu_name_orders_path, 
      		update_elements: {id: '#order_item_menu_id', price: '#order_item_unit_price', code: '#order_item_code'}  %>
  </div>
</td>
<td>

  <div class="field">
  	<%= f.label :unit_price %>  
    <%= f.text_field :unit_price, readonly: true%>
  </div>
</td>

<td>
  <div class="field">
  	<%= f.label :quantity %>  
    <%= f.number_field :quantity %>
  </div>

</td>

</tr>
<tr>
  <td>
  <div class="actions">
      <%= f.submit "Add Item", class: 'order-form-submit' %>
  </div>
</td>
</tr>
<% end %>

</table>